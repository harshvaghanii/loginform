<!DOCTYPE html>
<html lang="en">

<head>{{>header}}</head>

<body onscroll="hideMenu()">
    <header class="page-header">
        <nav class="navigation-bar">{{>navbar}}</nav>
    </header>

    <section class="welcome-message">
        <h1>Welcome to Vaghani's Kitchen</h1>
    </section>

    <section class="cuisines" id="cuisines">
        <header class="cusines-header">
            <h1 class="cuisine-header">Our Cuisines</h1>
        </header>
        <section class="section-images">
            <div id="image1" class="cuisine-image">
                <img src="../Images/cuisine1.jpg" alt="Cuisine Image">
                <h2>Italian</h2>
            </div>
            <div id="image2" class="cuisine-image">
                <img src="../Images/cuisine2.jpg" alt="Cuisine Image">
                <h2>Indonesian</h2>
            </div>
            <div id="image3" class="cuisine-image">
                <img src="../Images/cuisine3.jpg" alt="Cuisine Image">
                <h2>Turkish</h2>
            </div>
            <div id="image4" class="cuisine-image">
                <img src="../Images/cuisine4.jpg" alt="Cuisine Image">
                <h2>Indian</h2>
            </div>
            <div id="image5" class="cuisine-image">
                <img src="../Images/cuisine5.jpg" alt="Cuisine Image">
                <h2>Thai</h2>
            </div>
            <div id="image6" class="cuisine-image">
                <img src="../Images/cuisine6.jpg" alt="Cuisine Image">
                <h2>Spanish</h2>
            </div>
            <div id="image7" class="cuisine-image">
                <img src="../Images/cuisine7.jpg" alt="Cuisine Image">
                <h2>Moroccan</h2>
            </div>
            <div id="image8" class="cuisine-image">
                <img src="../Images/cuisine8.jpg" alt="Cuisine Image">
                <h2>Japanese</h2>
            </div>
            <div id="image9" class="cuisine-image">
                <img src="../Images/cuisine9.jpg" alt="Cuisine Image">
                <h2>French</h2>
            </div>
        </section>
    </section>

    <!-- Locations -->

    <section class="cuisines" id="locations">
        <header class="cusines-header">
            <h1 class="cuisine-header">Our Locations</h1>
        </header>
        <section class="section-images">
            <div class="cuisine-image">
                <img src="../Images/location1.jpg" alt="Location Image">
                <h2>Mumbai</h2>
            </div>
            <div class="cuisine-image">
                <img src="../Images/location2.jpg" alt="Location Image">
                <h2>Ahmedabad</h2>
            </div>
            <div class="cuisine-image">
                <img src="../Images/location3.jpg" alt="Location Image">
                <h2>Udaipur</h2>
            </div>
        </section>
    </section>

    <footer>{{>footer}}</footer>
    <script src="https://kit.fontawesome.com/260d458d63.js" crossorigin="anonymous">
    </script>
</body>


</html>